timeout 30
gfxmenu /boot/Moonlight
default 0

title Загрузка с жёсткого диска
find --set-root --ignore-floppies --ignore-cd /bootmgr || find --set-root --ignore-floppies --ignore-cd /ntldr
map (hd0) (hd1)
map (hd1) (hd0)
map --hook
rootnoverify (hd0)
chainloader (hd0)+1

title Установка Microsoft Windows XP SP2 x86 - Русская версия
root (hd0,0)
map --mem /WINSETUP/XPpSP2.ISO (0xff)
map (hd0) (hd1)
map (hd1) (hd0)
map --hook
root (0xff)
chainloader /I386/SETUPLDR.BIN

title Установка Microsoft Windows 7 - Русская версия
map --unmap=0:0xff
map --unhook
root (hd0,0)
chainloader /bootmgr

title Установка Windows 8
find --set-root /iso/Windows_8.iso 
map /iso/Windows_8.iso (0xff) || map --mem /iso/Windows_8.iso (0xff)
map --hook
chainloader (0xff)

title Загрузка Ubuntu 14.04
find --set-root /iso/ubuntu-14.04.iso 
map /iso/ubuntu-14.04.iso (0xff) || map --mem /iso/ubuntu-14.04.iso (0xff)
map --hook
chainloader (0xff)

title Загрузка Debian Live 7.5.0
find --set-root /iso/debian-live-7.5.0.iso 
map /iso/debian-live-7.5.0.iso (0xff) || map --mem /iso/debian-live-7.5.0.iso (0xff)
map --hook
chainloader (0xff)

title Загрузка Linux Mint-17
find --set-root /iso/linuxmint-17.iso 
map /iso/linuxmint-17.iso (0xff) || map --mem /iso/linuxmint-17.iso (0xff)
map --hook
chainloader (0xff)

title Загрузка Fedora 20
find --set-root /iso/Fedora-20.iso 
map /iso/Fedora-20.iso (0xff) || map --mem /iso/Fedora-20.iso (0xff)
map --hook
chainloader (0xff)

title Загрузка Acronis Disk Director & True Image - Работа с разделами жёстких дисков
find --set-root /iso/Acronis-13.iso
map --mem /iso/Acronis-13.iso (hd32)
map --hook
chainloader (hd32)

title Загрузка Hirens BootCD 15.1
find --set-root /iso/Hirens-BootCD-15.1.iso
map --mem /iso/Hirens-BootCD-15.1.iso (hd32)
map --hook
chainloader (hd32)

title Загрузка Kaspersky Rescue LiveCD - Антивирус Касперского
map /iso/kav_rescue_10.iso (0xff) || map --mem /iso/kav_rescue_10.iso (0xff)
map --hook root (0xff)
chainloader (0xff)

title Загрузка Plop Boot Manager
ls /usbdrive.tag || find --set-root --ignore-cd /usbdrive.tag
kernel /plpbt.bin

title Командная строка
commandline

title
root

title Дополнительные утилиты >>>
configfile /boot/menu_2.lst

title Загрузка c CD/DVD-ROM
cdrom --init
map --hook
chainloader (cd0)

;title Загрузка с дискеты
;rootnoverify (fd0)
;chainloader (fd0)+1

title Перезагрузка компьютера
reboot

title Выключение компьютера
halt
